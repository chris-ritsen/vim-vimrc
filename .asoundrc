pcm.!default headphones

pcm.hdtv {
  type hw
  card HDMI
  device 3
}

pcm.headphones {
  type hw
  card 0
  device 0
}

pcm.cool {
  type dmix;
  ipc_key 1024
  ipc_key_add_uid true
  slave {
    pcm "headphones"
    rate 48000
    channels 2
  }
}

